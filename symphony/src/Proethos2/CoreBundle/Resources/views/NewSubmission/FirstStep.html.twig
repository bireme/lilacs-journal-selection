                            <div class="form-group required">
                                <label for="select-publication-type">{% trans %}Publication Type{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 3} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <div>
                                    <select class="form-control selectpicker" id="select-publication-type" name="publication_type[] data-size="5" data-width="fit" title="{% trans %}Choose one of the following...{% endtrans %}" multiple>
                                        {% for p_type in publication_type %}
                                            <option value="{{ p_type.id }}" {% if p_type.id in post_data.publication_type %}selected{% endif %}>{{ p_type.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group required">
                                <label for="select-language">{% trans %}Language{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 3} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <div>
                                    <select class="form-control selectpicker" id="select-language" name="language[]" data-size="5" data-width="fit" title="{% trans %}Choose one of the following...{% endtrans %}" multiple>
                                        {% for lang in language %}
                                            <option value="{{ lang.id }}" {% if lang.id in post_data.language %}selected{% endif %}>{{ lang.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group required">
                                <label for="select-thematic-area">{% trans %}Thematic Area{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 19} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <select class='form-control selectpicker' id='select-thematic-area' name='thematic_area' data-size="5" required>
                                    <option value="">-</option>
                                    {% for t_area in thematic_area %}
                                        <option value="{{ t_area.id }}" {% if post_data.thematic_area == t_area.id %}selected{% endif %}>{{ t_area.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group required">
                                <label for="select-specialty">{% trans %}Specialty{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 19} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <select class='form-control selectpicker' id='select-specialty' name='specialty' data-size="5" required>
                                    <option value="">-</option>
                                    {% for special in specialty %}
                                        <option value="{{ special.id }}" {% if post_data.specialty == special.id %}selected{% endif %}>{{ special.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="input_qualis">{% trans %}Qualis Grade{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='qualis' id='input_qualis' value="{{ post_data.qualis }}">
                            </div>

                            <div class="form-group required">
                                <label for="">{% trans %}Funded by CNPq{% endtrans %}?</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 199} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <div class="radio">
                                    <label><input type="radio" name="funded_by_cnpq" id="radio_cnpq_yes" value="yes" {% if post_data.funded_by_cnpq == 'yes' %}checked{% endif %} required> {% trans %}Yes{% endtrans %}</label>
                                    <label><input type="radio" name="funded_by_cnpq" id="radio_cnpq_no" value="no" {% if not post_data.funded_by_cnpq or post_data.funded_by_cnpq == 'no' %}checked{% endif %} required> {% trans %}No{% endtrans %}</label>
                                </div>
                            </div>

                            <div class="form-group required">
                                <label for="input_funders">{% trans %}Funders{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='funders' id='input_funders' value="{{ post_data.funders }}" required>
                            </div>

                            <div class="form-group">
                                <label for="input_indexed_in">{% trans %}Other Indexes{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='indexed_in' id='input_indexed_in' value="{{ post_data.indexed_in }}">
                            </div>

                            <div class="form-group">
                                <label for="input_databases">{% trans %}Databases{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='databases' id='input_databases' value="{{ post_data.databases }}">
                            </div>
                        </fieldset>

                        <div class='submission-button-controls'>
                            <button type='submit' class='btn btn-primary'>{% trans %}Save and next{% endtrans %}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

{% endblock %}
