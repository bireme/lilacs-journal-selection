{% extends "::base.html.twig" %}

{% block title %}{% trans %}New submission{% endtrans %}{% endblock %}

{% block content %}
    <div class="container-fluid main-content">
        <div class="row">
            <div class='col-md-12'>
                <h1 class="page-header">{% trans %}New submission{% endtrans %}</h1>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <ul class="nav nav-tabs" id='new-submission-tab'>
                    <li role="presentation" class='active'>
                        <a href="{{ path("submission_new_first_step") }}" title="{% trans %}Journal Data{% endtrans %}">
                            {% trans %}Journal Data{% endtrans %}
                        </a>
                    </li>
                    <li role="presentation"><a href="javascript:void(0)" title="{% trans %}About Project{% endtrans %}">{% trans %}About Project{% endtrans %}</a></li>
                    <li role="presentation"><a href="javascript:void(0)">{% trans %}Clinical study{% endtrans %}</a></li>
                    <li role="presentation"><a href="javascript:void(0)">{% trans %}Additional Information{% endtrans %}</a></li>
                    <li role="presentation"><a href="javascript:void(0)">{% trans %}Bibliography{% endtrans %}</a></li>
                    <li role="presentation"><a href="javascript:void(0)">{% trans %}Attached Files{% endtrans %}</a></li>
                    <li role="presentation"><a href="javascript:void(0)">{% trans %}Revision{% endtrans %}</a></li
                </ul>
            </div>
        </div>

        <div class='new-submission-tab-content'>
            <div class='row submission-meta'> </div>

            <div class='row'>
                <div class='col-md-12'>
                    <form id="first_step" class='form' method='POST' action='{{ path("submission_new_first_step") }}'>
                        <fieldset>
                            <legend>{% trans %}Journal Data{% endtrans %}</legend>

                            <div class="form-group required">
                                <label for="input_title">{% trans %}Title{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='title' id='input_title' value="{{ post_data.title }}" required>
                            </div>

                            <div class="form-group">
                                <label for="input_short_title">{% trans %}Short Title{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 15} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='short_title' id='input_short_title' value="{{ post_data.short_title }}">
                            </div>

                            <div class="form-group">
                                <label for="input_acronym_title">{% trans %}Title Acronym{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 16} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='acronym_title' id='input_acronym_title' value="{{ post_data.acronym_title }}">
                            </div>

                            <div class="form-group">
                                <label for="input_previous_title">{% trans %}Previous Title{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='previous_title' id='input_previous_title' value="{{ post_data.previous_title }}">
                            </div>

                            <div class="form-group">
                                <label for="input_additional_title">{% trans %}Additional Title{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='additional_title' id='input_additional_title' value="{{ post_data.additional_title }}">
                            </div>

                            <div class="form-group">
                                <label for="input_issn">{% trans %}ISSN{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='issn' id='input_issn' value="{{ post_data.issn }}">
                            </div>

                            <div class="form-group">
                                <label for="input_issn_online">{% trans %}ISSN Online{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='issn_online' id='input_issn_online' value="{{ post_data.issn_online }}">
                            </div>

                            <div class="form-group required">
                                <label for="select-frequency">{% trans %}Frequency{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 19} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <select class='form-control selectpicker' id='select-frequency' name='frequency' data-size="5" required>
                                    <option value="">-</option>
                                    {% for code, name in frequency %}
                                        <option value="{{ code }}" {% if post_data.frequency == code %}selected{% endif %}>{{ name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group required">
                                <label for="input_standards">{% trans %}Standards{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='standards' id='input_standards' value="{{ post_data.standards }}" required>
                            </div>

                            <div class="form-group">
                                <label for="input_bibliographic_subtitle">{% trans %}Bibliographic Subtitle{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='bibliographic_subtitle' id='input_bibliographic_subtitle' value="{{ post_data.bibliographic_subtitle }}">
                            </div>

                            <div class="form-group required">
                                <label for="input_creation_year">{% trans %}Creation Year{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 20} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='creation_year' id='input_creation_year' maxlength="4" value="{{ post_data.creation_year }}" required>
                            </div>

                            <div class="form-group">
                                <label for="input_lifetime">{% trans %}Lifetime{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='lifetime' id='input_lifetime' value="{{ post_data.lifetime }}">
                            </div>

                             <div class="form-group required">
                                <label for="select-support">{% trans %}Support{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 19} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <select class='form-control selectpicker' id='select-support' name='support' data-size="5" required>
                                    <option value="">-</option>
                                    {% for code, name in support %}
                                        <option value="{{ code }}" {% if post_data.support == code %}selected{% endif %}>{{ name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                             <div class="form-group required">
                                <label for="select-fulltext">{% trans %}Full Text{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 19} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <select class='form-control selectpicker' id='select-fulltext' name='fulltext' data-size="5" required>
                                    <option value="">-</option>
                                    {% for code, name in fulltext %}
                                        <option value="{{ code }}" {% if post_data.fulltext == code %}selected{% endif %}>{{ name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="input_website">{% trans %}Website{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='website' id='input_website' value="{{ post_data.website }}">
                            </div>

                            <div class="form-group">
                                <label for="input_website_info">{% trans %}Website Information{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 14} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='website_info' id='input_website_info' value="{{ post_data.website_info }}">
                            </div>

                            <div class="form-group">
                                <label for="textarea-social-networks-info">{% trans %}Social Networks Information{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 3} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <textarea rows="6" class="form-control" name='social_networks_info' id='textarea-social-networks-info'>{{ post_data.social_networks_info }}</textarea>
                            </div>

                            <div class="form-group required">
                                <label for="textarea-mission">{% trans %}Mission{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 3} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <textarea rows="6" class="form-control" name='mission' id='textarea-mission' required>{{ post_data.mission }}</textarea>
                            </div>
