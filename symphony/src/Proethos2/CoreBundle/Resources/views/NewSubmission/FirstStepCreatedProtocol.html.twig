                            <div class="form-group required">
                                <label for="select-publication-type">{% trans %}Publication Type{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 19} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <div>
                                    <select class="form-control selectpicker" id="select-publication-type" name="publication_type[]" data-size="5" data-width="fit" title="{% trans %}Choose one of the following...{% endtrans %}" multiple>
                                        {% for p_type in publication_type %}
                                            <option value="{{ p_type.id }}" {% if p_type in submission.publicationType %}selected{% endif %}>{{ p_type.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group required">
                                <label for="select-language">{% trans %}Language{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 20} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <div>
                                    <select class="form-control selectpicker" id="select-language" name="language[]" data-size="5" data-width="fit" title="{% trans %}Choose one of the following...{% endtrans %}" multiple>
                                        {% for lang in language %}
                                            <option value="{{ lang.id }}" {% if lang in submission.language %}selected{% endif %}>{{ lang.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group required">
                                <label for="select-thematic-area">{% trans %}Thematic Area{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 21} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <select class='form-control selectpicker' id='select-thematic-area' name='thematic_area' data-size="5" required>
                                    <option value="">-</option>
                                    {% for t_area in thematic_area %}
                                        <option value="{{ t_area.id }}" {% if submission.thematicArea.id == t_area.id %}selected{% endif %}>{{ t_area.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group required">
                                <label for="select-specialty">{% trans %}Specialty{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 22} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <select class='form-control selectpicker' id='select-specialty' name='specialty' data-size="5" required>
                                    <option value="">-</option>
                                    {% for special in specialty %}
                                        <option value="{{ special.id }}" {% if submission.specialty.id == special.id %}selected{% endif %}>{{ special.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="input_qualis">{% trans %}Qualis Grade{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 23} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='qualis' id='input_qualis' value="{{ submission.qualis }}">
