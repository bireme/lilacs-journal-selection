                                </div>
                            </div>

                            <div class="form-group required">
                                <label for="input_funders">{% trans %}Funders{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 25} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='funders' id='input_funders' value="{{ submission.funders }}" required>
                            </div>

                            <div class="form-group">
                                <label for="input_indexed_in">{% trans %}Other Indexes{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 26} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='indexed_in' id='input_indexed_in' value="{{ submission.indexedIn }}">
                            </div>

                            <div class="form-group">
                                <label for="input_databases">{% trans %}Databases{% endtrans %}:</label>
                                <a href="{{ path("crud_admin_help_show", {help_id: 27} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                                <input type="text" class="form-control" name='databases' id='input_databases' value="{{ submission.db }}">
                            </div>
                        </fieldset>

                        <div class='submission-button-controls'>
                            <button type='submit' class='btn btn-primary'>{% trans %}Save as draft{% endtrans %}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

{% endblock %}
