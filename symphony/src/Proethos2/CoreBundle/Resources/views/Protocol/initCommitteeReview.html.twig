    <div class="modal fade" id="modal-reject-reason" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-alert="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">{% trans %}Parecer do Reviewer{% endtrans %}: <span class="reject-label">{% trans %}Rejeitado{% endtrans %}</span></h4>
                </div>
                <div class="modal-body">
                    <p><b>{% trans %}Motivo{% endtrans %}</b>: <span id="text-reject-reason"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Visualizar Histórico do Reviewer -->
    <div class="modal fade" id="modal-reviewer-history" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content"></div>
        </div>
    </div>

{% endblock %}

{% block script %}
    <script>
        $(function(){

            var rowCount = $('#table-files tr').length;

            if (rowCount >= 6) {
                $("#attachment-button").attr("disabled", true);

                $("#attachment-button").on("click", function(e){
                    e.preventDefault();
                    e.stopPropagation();
                });
            }

            $("#table-files").on("click", ".button-delete-attachment", function(e){
                var id = $(this).data('id');
                $("#hidden-delete-attachment").val(id);
            });

            $('#modal-delete-attachment').on('hidden.bs.modal', function(){
                $("#hidden-delete-attachment").val("");
            });

            // set action
            $('#form-action button').on('keypress click', function(e){
                // e.preventDefault();

                var action = $(this).attr('id');
                $('#input-send-to').val(action);
            });

            // binding revision id to remove member form
            $("a[id^=remove-committee-revisor-]").on('keypress click', function(e){
                var member_id = $(this).data('member');
                var revision_id = $(this).attr('id');
                revision_id = revision_id.replace("remove-committee-revisor-", "");

                $("input[name=remove-member]").val(revision_id);
                $("input[name=member-type]").val("committee");
                $("input[name=member-id]").val(member_id);
            });

            // bulk remove committee members
            $("#bulk-remove-committee-revisor").on('keypress click', function(e){
                var members = [];
                var member_ids = [];
                var member_id;
                var member_type = $(this).data('member');

                $("#member-committee-list input:checkbox:checked").each(function(){
                    members.push($(this).val());
                    member_id = $(this).attr('name');
                    member_id = member_id.replace("revision-", "");
                    member_ids.push(member_id);
                });

                $("input[name=bulk-remove-members]").val(members);
                $("input[name=member-type]").val(member_type);
                $("input[name=member-ids]").val(member_ids);
            });

            // binding revision id to remove member form
            $("a[id^=remove-adhoc-revisor-]").on('keypress click', function(e){
                var revision_id = $(this).attr('id');
                revision_id = revision_id.replace("remove-adhoc-revisor-", "");

                $("input[name=remove-member]").val(revision_id);
                $("input[name=member-type]").val("adhoc");
            });

            // bulk remove adhoc members
            $("#bulk-remove-adhoc-revisor").on('keypress click', function(e){
                var members = [];
                var member_type = $(this).data('member');

                $("#member-adhoc-list input:checkbox:checked").each(function(){
                    members.push($(this).val());
                });

                $("input[name=bulk-remove-members]").val(members);
                $("input[name=member-type]").val(member_type);
            });


            // binding action to button that goes on
            $('#button-save-and-send-to-meeting').on('keypress click', function(e){
                {% if total_final_revisions == 0 %}
                    $('#modal-confirm-submit-without-revisions').modal('show');
                {% else %}
                    $('#form-action').submit();
                {% endif %}
            });

            $('#button-confirm-submit-without-revisions').on('keypress click', function(e){
                $('#form-action').submit();
            });

            // send alert
            $('a.send-alert').on('keypress click', function(e){
                e.preventDefault();
                
                var href = $(this).attr('href');
                $('#hidden-send-alert').val(href);
                $('#modal-confirm-send-alert').modal('show');

                return false;
            });

            // confirm send alert
            $('#button-confirm-send-alert').on('keypress click', function(e){
                var href = $('#hidden-send-alert').val();
                window.location = href;
            });

            $("a.reject-reason").on("click", function(e){
                var data = $(this).data('reason');
                $("#text-reject-reason").text(data);
            });

            $('.select-filter').on("change", function(e){
                var member = $(this).data('member');
                $("input#filter-field-"+member).keyup();
            });

            $("input.filter-field").keyup(function(){
                // Retrieve the input field text and reset the count to zero
                var filter = $(this).val(), member = $(this).data('member'), field = $('#select-filter-'+member).val(), count = 0;
         
                // Loop through the comment list
                $("table#list-"+member+" tbody tr.filter").each(function(){
         
                    // If the list item does not contain the text phrase fade it out
                    if ($(this).find('td.filter-'+field).text().search(new RegExp(filter, "i")) < 0) {
                        $(this).hide();

                    // Show the list item if the phrase matches and increase the count by 1
                    } else {
                        $(this).show();
                        // $(this).next().show();
                        count++;
                    }
                });
         
                // Update the count
                var numberItems = count;
                // $("#filter-count").text("Total: "+count);
            });

        });
    </script>
{% endblock %}
