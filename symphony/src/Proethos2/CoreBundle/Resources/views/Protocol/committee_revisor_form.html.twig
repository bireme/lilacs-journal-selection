<input type='hidden' name='accept-conditions' value="off">
<div class='row'>
    <div class="col-md-12">
        <div class="form-group">
            <label for="textarea-positive-aspects">{% trans %}Please highlight the journal positive aspects{% endtrans %}:</label>
            <textarea class="form-control" id='textarea-positive-aspects' name="positive-aspects" required {% if protocol_revision.isFinalRevision %}disabled{% endif %}>{{ protocol_revision.positiveAspects }}</textarea>
        </div>
    </div>
</div>
<div class='row'>
    <div class="col-md-12">
        <div class="form-group">
            <label for="textarea-negative-aspects">{% trans %}Please highlight the journal negative aspects{% endtrans %}:</label>
            <textarea class="form-control" id='textarea-negative-aspects' name="negative-aspects" required {% if protocol_revision.isFinalRevision %}disabled{% endif %}>{{ protocol_revision.negativeAspects }}</textarea>
        </div>
    </div>
</div>
<div class='row'>
    <div class="col-md-12">
        <div class="form-group">
            <label for="select-accept-journal">{% trans %}Do you approve the inclusion of the journal?{% endtrans %}:</label>
            <select class='form-control selectpicker' id='select-accept-journal' name='accept-journal' data-size="5" required {% if protocol_revision.isFinalRevision %}disabled{% endif %}>
                <option value="">-</option>
                {% for code, name in accept_journal %}
                    <option value="{{ code }}" {% if protocol_revision.acceptJournal == code %}selected{% endif %}>{{ name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</div>
<div class='row'>
    <div class="col-md-12">
        <div class="form-group">
            <label for="textarea-other-comments">{% trans %}Comments and justifications{% endtrans %}:</label>
            <textarea class="form-control" id='textarea-other-comments' name="other-comments" required {% if protocol_revision.isFinalRevision %}disabled{% endif %}>{{ protocol_revision.otherComments }}</textarea>
        </div>
    </div>
</div>
<div class='row'>
    <div class="col-md-12">
        <div class="form-group">
            <div class="checkbox">
                <label for='input-accept-terms'>
                    <input type='checkbox' name='accept-conditions' id='input-accept-conditions' {% if protocol_revision.acceptConditions %}checked{% endif %} {% if protocol_revision.isFinalRevision %}disabled{% endif %}>
                    {% trans %}I declare that I have no ties or self-interest in the evaluation of this journal{% endtrans %}
                </label>
            </div>
        </div>
    </div>
</div>