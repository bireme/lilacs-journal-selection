{% extends "::base.html.twig" %}

{% block title %}{% trans %}See Journal{% endtrans %}{% endblock %}

{% block content %}

    <div class="container-fluid main-content see-submission">

        <div class="row">
            <div class='col-md-12'>
                <h1 class="page-header">{% trans %}Show Journal{% endtrans %}</h1>
            </div>
        </div>

        {% include 'Proethos2CoreBundle:Protocol:meta.html.twig' %}

        {% if protocol.status == 'S' and 'investigator' in app.user.rolesSlug and is_owner %}
            <form method="POST" id='form-action' enctype="multipart/form-data" action="">

                <input type="hidden" id="input-extra-file" name="extra-file" value="yes">

                <div class='block'>
                    <div class='row'>
                        <div class="col-md-12">
                            <h2 class='sub-header'>{% trans %}Attachment{% endtrans %}:</h2>
                        </div>
                    </div>

                    <div class='row'>
                        <div class="col-md-12">
                            <div class="form-group">
                                {% if submission_upload %}
                                    <label for="file-extra-attachment">{% trans %}Edit attachment{% endtrans %}: <strong>{{ submission_upload[0] }}</strong></label>
                                {% else %}
                                    <label for="file-extra-attachment">{% trans %}Send attachment{% endtrans %}:</label>
                                {% endif %}
                                <input type='file' class='form-control' id='file-extra-attachment' name="extra-attachment">
                            </div>
                            <button type="submit" class='btn btn-default'>{% trans %}Save attachment{% endtrans %}</button>
                        </div>
                    </div>
                </div>

            </form>
        {% endif %}

    </div>

{% endblock %}

{% block script %}
    <script>
        $(function(){
            $(".toggle-block").trigger('click');
        });
    </script>
{% endblock %}
