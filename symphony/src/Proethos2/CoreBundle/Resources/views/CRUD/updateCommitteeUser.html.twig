<form class='form' method="POST" id='form-update-user' action='{{ path("crud_committee_user_update", {user_id: user.id}) }}'>

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{% trans %}Update User{% endtrans %}</h4>
    </div>
    <div class="modal-body">
        
        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group required">
                    <label for="input-email">{% trans %}Email{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 66} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <input type='email' class='form-control' id="input-email" name="email" value="{{ user.email }}" required>
                </div>
            </div>
        </div>
        
        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group required">
                    <label for="input-name">{% trans %}Name{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 67} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <input type='text' class='form-control' id="input-name" name="name" value="{{ user.name }}" required>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group required">
                    <label for="select-country">{% trans %}Country{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 68} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <select class='form-control' id="select_country" name="country" required>
                        <option value="">-</option>
                        {% for country in countries %}
                            <option value="{{ country.id }}" {% if country == user.country %}selected{% endif %}>{{ country }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="select-specialty">{% trans %}Practice Area{% endtrans %}:</label>
                    <a href="{{ path("crud_admin_help_show", {help_id: 123} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <select class='form-control' id='select_specialty' name='specialty' data-size="5" data-live-search="true">
                        <option value="">-</option>
                        {% for special in specialty %}
                            <option value="{{ special.id }}" {% if user.specialty.id == special.id %}selected{% endif %}>{{ special.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-other-specialty">{% trans %}Other Practice Area{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 126} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <input type='text' class='form-control' id="input-other-specialty" name="other-specialty" value="{{ user.otherSpecialty }}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <label for="input-institution">{% trans %}Institution{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 69} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <input type='text' class='form-control' id="input-institution" name="institution" value="{{ user.institution }}">
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group required">
                    <label for="input-lattes">{% trans %}Lattes URL{% endtrans %}:</label> 
                    <a href="{{ path("crud_admin_help_show", {help_id: 107} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                    <input type='url' class='form-control' id="input-lattes" name="lattes" value="{{ user.lattes }}" required>
                </div>
            </div>
        </div>

        <div class='row'>
            <div class='col-md-12'>
                <div class="form-group">
                    <div class="checkbox">
                        <label for="input-status">
                            <input type="checkbox" id='input-status' name='status' value="true" {% if user.isActive %}checked{% endif %}> {% trans %}Active?{% endtrans %}
                            <a href="{{ path("crud_admin_help_show", {help_id: 70} ) }}" data-toggle="modal" data-target="#modal-help"><i class='glyphicon glyphicon-question-sign'></i></a>
                        </label>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
        <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
    </div>
</form>

{% block script %}
    <script>
        $(function(){
            $("#select_country").selectpicker();
            $("#select_specialty").selectpicker();
        });
    </script>
{% endblock %}