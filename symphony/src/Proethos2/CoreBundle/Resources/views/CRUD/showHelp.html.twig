<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="{% trans %}Close{% endtrans %}"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">{% trans %}Help{% endtrans %}</h4>
</div>
<div class="modal-body">
    {% if not help.message %}
        <i>{% trans %}There is no help message set for this field.{% endtrans %}</i>
    {% else %}
        {{ help }}
    {% endif %}
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
    {% if is_granted("ROLE_USER") and 'administrator' in app.user.rolesSlug %}
        <a href="{{ path('crud_admin_help_list') }}?id={{ help.id }}" type="button" class="btn btn-primary">{% trans %}Update this message{% endtrans %}</a>
    {% endif %}
</div>